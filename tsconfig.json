{
	"exclude": [".git", ".npm", "node_modules", "dist"],
	"compilerOptions": {
		"target": "ES2021",
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"allowJs": true,
		"noEmit": true,
		"jsx": "react",
		"plugins": [
			{
				"name": "typescript-styled-plugin"
			},
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "camelCase",
					"customMatcher": "\\.css$",
					"namedExports": false
				}
			}
		]
	}
}
